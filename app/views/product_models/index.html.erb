<h1>Modelos de Produtos</h1>
<div>
  <%= link_to 'Cadastrar Novo Modelo', new_product_model_path %>
</div>

<% if @product_models.any? %>
  <div>
    <% @product_models.each do |pm| %>
      <div>
        <h2><%= pm.name %> </h2>
        <dl>
          <dt>SKU</dt>
          <dd><%= pm.sku %></dd>
          <dt>Fornecedor</dt>
          <dd><%= pm.supplier.brand_name %></dd>
        </dl>
      </div>
    <% end %>
  </div>
<% else %>
  <p>Nenhum modelo de produto cadastrado</p>
<% end %>